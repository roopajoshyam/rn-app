{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@components/*": ["components/*"]
    },
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "ios"]
}
